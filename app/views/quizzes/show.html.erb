<h1>Quizzes#show</h1>

<ul>
  <li>
    <%= @quiz.id %>
  </li>
  <li>
    <%= @quiz.title %>
  </li>
  <li>
    <%= @quiz.url %>
  </li>
  <li>
    <%= @quiz.spreadsheet_id %>
  </li>
</ul>

<table class="table">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Question</th>
      <th scope="col">Answer</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each_with_index do |question, i| %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= question.question %></td>
        <td><%= question.answer %></td>
    </tr>
    <% end %>
  </tbody>
</table>